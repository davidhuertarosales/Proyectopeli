@model Proyectopeli.Models.Comentario

@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this comment?</h2>

<h3>Photo Title: "@Html.DisplayFor(model => model.Pelicula.PeliID)"</h3>        

<div class="photo-comment">

    <div class="photo-comment-from">
        From:
        @Html.DisplayFor(model => model.UserName)
    </div>

    <div class="photo-comment-subject">
        @Html.DisplayNameFor(model => model.Critica):
        @Html.DisplayFor(model => model.Critica)
    </div>

    <div class="photo-comment-body">
        @Html.DisplayFor(model => model.Cuerpo)
    </div>

</div>

@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Volver a la Pelicula", "Display", "Peli", new { id = ViewBag.PhotoID }, null)
    </p>
}
